@model Disbursement

@{
    ViewBag.Title = "Add Disbursement";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add Disbursement</h4>
                </div>
                <div class="card-body">
                    <form asp-action="TrackDisbursement" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="LoanApplicationId" class="form-label"></label>
                            <select asp-for="LoanApplicationId" class="form-select" asp-items="ViewBag.LoanApplications">
                                <option value="">-- Select Application --</option>
                            </select>
                            <span asp-validation-for="LoanApplicationId" class="text-danger"></span>
                        </div>
                        @* Uncomment if you want to add DisbursedAmount field
                        <div class="form-group mb-3">
                            <label asp-for="DisbursedAmount" class="form-label"></label>
                            <input asp-for="DisbursedAmount" class="form-control" />
                            <span asp-validation-for="DisbursedAmount" class="text-danger"></span>
                        </div>
                        *@
                        <div class="form-group mb-3">
                            <label asp-for="DisbursementDate" class="form-label"></label>
                            <input asp-for="DisbursementDate" type="date" class="form-control" />
                            <span asp-validation-for="DisbursementDate" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Submit Disbursement</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
