@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Client Login - Loan Application System</title>
    <style>
        body {
            background-color: #eaf4fb;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .back-home-btn {
            position: absolute;
            top: 32px;
            left: 32px;
            background: linear-gradient(135deg, #96c7fa 0%, #3a8dde 100%);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 10px 22px 10px 18px;
            font-size: 1em;
            font-weight: 600;
            box-shadow: 0 2px 8px rgba(59,130,246,0.10);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: background 0.18s, box-shadow 0.18s, transform 0.12s;
            z-index: 10;
        }

            .back-home-btn:hover, .back-home-btn:focus {
                background: linear-gradient(135deg, #3a8dde 0%, #256bb2 100%);
                color: #fff;
                text-decoration: none;
                box-shadow: 0 4px 16px rgba(59,130,246,0.18);
                transform: translateY(-2px) scale(1.03);
            }

            .back-home-btn i {
                font-size: 1.1em;
            }

        .login-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-box {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 40px 32px 32px 32px;
            min-width: 320px;
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }

            .login-box h2 {
                margin-bottom: 24px;
                color: #333;
                text-align: center;
            }

        .form-group {
            margin-bottom: 18px;
            display: flex;
            flex-direction: column;
        }

            .form-group label {
                margin-bottom: 6px;
                color: #333;
                font-weight: 500;
            }

            .form-group input[type="text"],
            .form-group input[type="password"] {
                padding: 10px;
                border: 1px solid #bcd0e5;
                border-radius: 6px;
                font-size: 1em;
            }

        .checkbox-group {
            display: flex;
            align-items: center;
            margin-bottom: 18px;
        }

            .checkbox-group input[type="checkbox"] {
                margin-right: 8px;
            }

        .login-actions {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-bottom: 10px;
        }

        .login-btn {
            background-color: #3a8dde;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 10px 0;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
        }

            .login-btn:hover {
                background-color: #256bb2;
            }

        .forgot-btn {
            background: none;
            border: none;
            color: #3a8dde;
            text-decoration: underline;
            cursor: pointer;
            font-size: 0.98em;
            padding: 0;
            text-align: left;
        }

        .create-account-link {
            margin-top: 10px;
            text-align: center;
        }

            .create-account-link a {
                color: #3a8dde;
                text-decoration: none;
                font-weight: 500;
            }

                .create-account-link a:hover {
                    text-decoration: underline;
                }

        .validation-summary-errors {
            color: #b00020;
            margin-bottom: 10px;
            text-align: center;
        }

        @@media (max-width: 600px) {
            .back-home-btn

        {
            top: 12px;
            left: 12px;
            padding: 8px 14px 8px 12px;
            font-size: 0.98em;
        }

        .login-box {
            min-width: 90vw;
            padding: 24px 8vw 24px 8vw;
        }

        }</style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <a href="/AdminAuth/Welcome" class="back-home-btn" title="Back to Homepage">
        <i class="fa fa-arrow-left"></i> Home
    </a>
    <div class="login-container">
        <div class="login-box">
            <h2>Client Login</h2>
            @using (Html.BeginForm("LoginC", "ClientAuth", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-summary-errors">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }
                <div class="form-group">
                    <label for="LoginId">Application ID or Email</label>
                    <input type="text" id="LoginId" name="LoginId" required autocomplete="username" />
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" id="Password" name="Password" required autocomplete="current-password" />
                </div>
                <div class="checkbox-group">
                    <input type="checkbox" id="KeepLoggedIn" name="KeepLoggedIn" />
                    <label for="KeepLoggedIn">Keep me logged in</label>
                </div>
                <div class="login-actions">
                    <button type="submit" class="login-btn">Log in</button>
                    <a href="/ClientAuth/ForgotPassword">Forgot Password?</a>
                </div>
            }
            <div class="create-account-link">
                <a href="/ClientAuth/Register">Need an account? Create an account</a>
            </div>
        </div>
    </div>
</body>
</html>
