@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Forgot Password - Loan Application System</title>
    <style>
        body {
            background-color: #eaf4fb;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .forgot-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .forgot-box {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 40px 32px 32px 32px;
            min-width: 320px;
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }

            .forgot-box h2 {
                margin-bottom: 24px;
                color: #333;
                text-align: center;
            }

        .form-group {
            margin-bottom: 18px;
            display: flex;
            flex-direction: column;
        }

            .form-group label {
                margin-bottom: 6px;
                color: #333;
                font-weight: 500;
            }

            .form-group input[type="text"],
            .form-group input[type="email"] {
                padding: 10px;
                border: 1px solid #bcd0e5;
                border-radius: 6px;
                font-size: 1em;
            }

        .forgot-actions {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-bottom: 10px;
        }

        .forgot-btn {
            background-color: #3a8dde;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 10px 0;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
        }

            .forgot-btn:hover {
                background-color: #256bb2;
            }

        .back-link {
            margin-top: 10px;
            text-align: center;
        }

            .back-link a {
                color: #3a8dde;
                text-decoration: none;
                font-weight: 500;
            }

                .back-link a:hover {
                    text-decoration: underline;
                }

        .validation-summary-errors {
            color: #b00020;
            margin-bottom: 10px;
            text-align: center;
        }

        .recovered-password {
            color: #256bb2;
            background: #eaf4fb;
            border-radius: 6px;
            padding: 10px;
            margin-bottom: 10px;
            text-align: center;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="forgot-container">
        <div class="forgot-box">
            <h2>Forgot Password</h2>
            @using (Html.BeginForm("ForgotPassword", "ClientAuth", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-summary-errors">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }
                @if (ViewBag.RecoveredPassword != null)
                {
                    <div class="recovered-password">
                        Your password is: <strong>@ViewBag.RecoveredPassword</strong>
                    </div>
                }
                <div class="form-group">
                    <label for="Email">Registered Email</label>
                    <input type="email" id="Email" name="Email" required autocomplete="email" />
                </div>
                <div class="form-group">
                    <label for="Name">Registered Name</label>
                    <input type="text" id="Name" name="Name" required autocomplete="name" />
                </div>
                <div class="forgot-actions">
                    <button type="submit" class="forgot-btn">Recover Password</button>
                </div>
            }
            <div class="back-link">
                <a href="/ClientAuth/LoginC">Back to Login</a>
            </div>
        </div>
    </div>
</body>
</html>
